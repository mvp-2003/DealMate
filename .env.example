# DealPal Environment Configuration Example
# Copy this file to .env and update with your actual values

# General Configuration
NODE_ENV=development
LOG_LEVEL=info
TZ=UTC

# Database Configuration (PostgreSQL)
POSTGRES_DB=dealpal
POSTGRES_USER=dealpal
POSTGRES_PASSWORD=changeme_in_production
DATABASE_URL=postgresql://dealpal:changeme_in_production@localhost:5432/dealpal
DB_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=changeme_in_production
REDIS_MAX_MEMORY=256mb
REDIS_URL=redis://default:changeme_in_production@localhost:6379

# Backend Service (Rust)
BACKEND_PORT=8000
RUST_LOG=info,sqlx=warn
RUST_BACKTRACE=1
JWT_SECRET=your-super-secret-jwt-key-changeme

# AI Service (Python)
AI_SERVICE_PORT=8001
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-1.5-flash
OPENROUTER_API_KEY=your-openrouter-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
AI_MAX_WORKERS=1

# Frontend (Next.js)
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_AI_API_URL=http://localhost:8001

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.dealpal.com
AUTH0_SECRET=your-auth0-secret
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id
NEXT_PUBLIC_AUTH0_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Auth Service
AUTH_SERVICE_PORT=3001

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Kafka Configuration (Optional - for full profile)
KAFKA_PORT=9092
KAFKA_EXTERNAL_PORT=29092

# Development Tools (Optional)
ADMINER_PORT=8082
REDIS_COMMANDER_PORT=8081

# Container Runtime Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Version Configuration (for specific builds)
RUST_VERSION=1.79
PYTHON_VERSION=3.12
NODE_VERSION=20
