{
  "name": "dealpal",
  "version": "1.0.0",
  "description": "Full-stack smart shopping assistant",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "cd frontend && next dev -p 9002",
    "genkit:dev": "cd frontend && genkit start -- tsx src/ai/dev.ts",
    "genkit:watch": "cd frontend && genkit start -- tsx --watch src/ai/dev.ts",
    "build": "cd frontend && next build",
    "build:dev": "cd frontend && NODE_ENV=development next build",
    "build:analyze": "cd frontend && ANALYZE=true next build",
    "start": "cd frontend && next start",
    "lint": "cd frontend && next lint",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "start:auth": "node backend/auth-service/index.js",
    "dev:auth": "nodemon backend/auth-service/index.js",
    "lighthouse": "./scripts/lighthouse-audit.sh",
    "lighthouse:ci": "lhci autorun",
    "performance:audit": "npm run lighthouse && npm run bundle:analyze",
    "bundle:analyze": "cd frontend && npx @next/bundle-analyzer",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "podman:build": "./scripts/podman-build.sh",
    "podman:up": "./scripts/podman-up.sh"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.3.0",
    "@auth0/nextjs-auth0": "^4.7.0",
    "@genkit-ai/firebase": "^1.14.1",
    "@genkit-ai/googleai": "^1.14.1",
    "@genkit-ai/next": "^1.14.1",
    "@hookform/resolvers": "^4.1.3",
    "@opentelemetry/exporter-jaeger": "^2.0.1",
    "@opentelemetry/winston-transport": "^0.14.0",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "bcryptjs": "^2.4.3",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "firebase": "^11.9.1",
    "framer-motion": "^12.23.6",
    "genkit": "^1.14.1",
    "genkit-cli": "^1.14.1",
    "jsonwebtoken": "^9.0.0",
    "lucide-react": "^0.475.0",
    "morgan": "^1.10.0",
